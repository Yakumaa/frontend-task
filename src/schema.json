{
	"contactForm": {
		"name": "Contact Form",
		"fields": [
			{
				"type": "text",
				"name": "firstname",
				"label": "First name",
				"placeholder": "Enter your first name",
				"required": true,
        "validation": {
          "minLength": 2,
          "maxLength": 50
        }
			},
			{
				"type": "text",
				"name": "lastname",
				"label": "Last name",
				"placeholder": "Enter your last name",
				"required": true,
        "validation": {
          "minLength": 2,
          "maxLength": 50
        }
			},
			{
				"type": "email",
				"name": "email",
				"label": "Email",
				"placeholder": "Enter your email",
				"required": true,
        "validation": {
          "pattern": "^[\\w-\\.]+@([\\w-]+\\.)+[\\w-]{2,4}$"
        }
			},
			{
				"type": "textarea",
				"name": "message",
				"label": "Message",
				"placeholder": "Enter your message",
				"required": true,
        "validation": {
          "minLength": 10,
          "maxLength": 500
        }
			}
		]
	},
	"userProfileForm": {
		"name": "User Profile Form",
		"fields": [
			{
				"type": "text",
				"name": "username",
				"label": "Username",
				"placeholder": "Choose a username",
				"required": true,
        "validation": {
          "minLength": 3,
          "maxLength": 20,
          "pattern": "^[a-zA-Z0-9_-]+$"
        }
			},
			{
				"type": "password",
				"name": "password",
				"label": "Password",
				"placeholder": "Enter your password",
				"required": true,
        "validation": {
          "minLength": 8
        }
			},
			{
				"type": "date",
				"name": "birthdate",
				"label": "Date of Birth",
				"required": true,
        "validation": {
          "min": "1900-01-01",
          "max": "2008-12-31"
        }
			},
			{
				"type": "tel",
				"name": "phone",
				"label": "Phone Number",
				"placeholder": "Enter your phone number",
				"required": false,
        "validation": {
          "minLength": 10,
          "pattern": "^\\+?[1-9]\\d{1,14}$"
        }
			}
		]
	},
	"jobApplicationForm": {
		"name": "Job Application Form",
		"fields": [
			{
				"type": "text",
				"name": "fullName",
				"label": "Full Name",
				"placeholder": "Enter your full name",
				"required": true,
        "validation": {
          "minLength": 2,
          "maxLength": 100
        }
			},
			{
				"type": "email",
				"name": "email",
				"label": "Email",
				"placeholder": "Enter your email",
				"required": true,
        "validation": {
          "pattern": "^[\\w-\\.]+@([\\w-]+\\.)+[\\w-]{2,4}$"
        }
			},
			{
				"type": "select",
				"name": "position",
				"label": "Position Applied For",
				"placeholder": "Enter the position you're applying for",
				"required": true,
				"options": [
					{ "value": "frontend", "label": "Frontend Developer" },
					{ "value": "backend", "label": "Backend Developer" },
					{ "value": "fullstack", "label": "Fullstack Developer" },
					{ "value": "qa", "label": "QA Engineer" },
					{ "value": "pm", "label": "Project Manager" }
				]
			},
			{
				"type": "file",
				"name": "resume",
				"label": "Resume",
				"required": true
			},
			{
				"type": "textarea",
				"name": "coverLetter",
				"label": "Cover Letter",
				"placeholder": "Enter your cover letter",
				"required": true,
        "validation": {
          "minLength": 50,
          "maxLength": 500
        }
			}
		]
	},
	"signUpForm": {
		"name": "Sign Up Form",
		"fields": [
			{
				"type": "text",
				"name": "username",
				"label": "Username",
				"placeholder": "Choose a username",
				"required": true,
        "validation": {
          "minLength": 3,
          "maxLength": 20
        }
			},
			{
				"type": "email",
				"name": "email",
				"label": "Email",
				"placeholder": "Enter your email",
				"required": true,
        "validation": {
          "pattern": "^[\\w-\\.]+@([\\w-]+\\.)+[\\w-]{2,4}$"
        }
			},
			{
				"type": "password",
				"name": "password",
				"label": "Password",
				"placeholder": "Enter your password",
				"required": true,
        "validation": {
          "minLength": 8  
        }
			},
			{
				"type": "password",
				"name": "confirmPassword",
				"label": "Confirm Password",
				"placeholder": "Confirm your password",
				"required": true,
        "validation": {
          "match": "password"
        }
			},
			{
				"type": "checkbox",
				"name": "termsAgreed",
				"label": "I agree to the Terms and Conditions",
				"required": true
			}
		]
	},
	"signInForm": {
		"name": "Sign In Form",
		"fields": [
			{
				"type": "email",
				"name": "email",
				"label": "Email",
				"placeholder": "Enter your email",
				"required": true,
        "validation": {
          "pattern": "^[\\w-\\.]+@([\\w-]+\\.)+[\\w-]{2,4}$"
        }
			},
			{
				"type": "password",
				"name": "password",
				"label": "Password",
				"placeholder": "Enter password",
				"required": true
			},
			{
				"type": "checkbox",
				"name": "rememberMe",
				"label": "Remember me",
				"required": false
			}
		]
	}
}
